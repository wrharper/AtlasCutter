<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
        x:Class="AtlasCutter.MainWindow"
        Title="Atlas Cutter">
        <StackPanel Margin="20">
        <TextBlock Text="Tile SizeX:"/>
        <TextBox x:Name="SizeXInput"/>
        
        <TextBlock Text="Tile SizeY:"/>
        <TextBox x:Name="SizeYInput"/>
        
        <TextBlock Text="Row Count:"/>
        <TextBox x:Name="RowCountInput"/>

        <Button Content="Generate Atlas" Click="OnGenerateClick"/>
    </StackPanel>
</Window>
